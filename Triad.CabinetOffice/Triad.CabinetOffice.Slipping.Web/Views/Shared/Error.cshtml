@using Triad.CabinetOffice.Slipping.Web.Exceptions
@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<div class="grid-row">
    <div class="column-two-thirds column-minimum">
        @if (Model.Exception.GetType() == typeof(SlippingUserNotFoundException))
        {
            <h1 class="heading-xlarge">
                Your details were not recognised
            </h1>
            <p>Your details were not recognised by the Slipping Request System.</p>
            <p>@User.Identity.Name</p>
            <p>Please contact the Whips Office Admin Team providing your name and email address via email or telephone:</p>
            <p>
                <strong class="bold-small">Email:</strong> <a href="mailto:GWAU@parliament.uk">GWAU@parliament.uk</a><br />
                <strong class="bold-small">Telephone:</strong> 0208 123 4567
            </p>
            <p><a href="#">Guidance on how to access the Slipping Request System</a></p>
        }
        else
        {
            <h1 class="heading-xlarge">
                Error
            </h1>
            <p>@Model.Exception.Message</p>
        }
    </div>
</div>

