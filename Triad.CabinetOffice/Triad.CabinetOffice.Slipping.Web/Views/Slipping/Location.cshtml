@model Triad.CabinetOffice.Slipping.Web.ViewModels.LocationAndHours
@using Triad.CabinetOffice.Slipping.Web.Extensions

@{
    ViewBag.Title = "Where are you going?";
}
<div class="grid-row">
    <div class="column-two-thirds column-minimum">
        @Html.ActionLink("Back", "ToDate", new { id = Model.ID }, new { @class = "link-back" })
        <h1 class="heading-large">
            Where are you going?
        </h1>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group @Html.ValidationErrorClassFor(model => model.Location, "form-group-error") ">
                <label class="form-label" for="Location">
                    Location
                    <span class="form-hint">This can be a city, town or village</span>
                </label>
                <span class="error-message">@Html.ValidationMessageFor(model => model.Location)</span>
                @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control", @type = "text", @maxlength = "20" } })
            </div>
            <div class="form-group @Html.ValidationErrorClassFor(model => model.Hours, "form-group-error") ">
                <label class="form-label" for="Hours">
                    How long will it take from your location to get to Westminster?
                    <span class="form-hint">Please provide an estimated time in hours only</span>
                </label>
                <span class="error-message">@Html.ValidationMessageFor(model => model.Hours)</span>
                @Html.EditorFor(model => model.Hours, new { htmlAttributes = new { @class = "form-control", @type = "text", @style = "width: 60px;", @maxlength = "3" } })
                <span>hours</span>
            </div>

            <div class="form-group">
                <input class="button" type="submit" value="Continue">
            </div>
        }
    </div>
</div>
